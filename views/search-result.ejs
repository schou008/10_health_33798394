<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Search Results</title>
    <link rel="stylesheet" type="text/css" href="/FitBookmain.css" />
</head>
<body>
    <header>
        <h1>Search Results for "<%= term %>"</h1>
    </header>

    <main>
        <% if (classes.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Class Name</th>
                        <th>Instructor</th>
                        <th>Date & Time</th>
                    </tr>
                </thead>

                <tbody>
                    <% classes.forEach(function(classItem) { %>
                        <tr>
                            <td><%= classItem.name %></td>
                            <td><%= classItem.instructor %></td>
                            <td><%= new Date(classItem.datetime).toLocaleString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No classes found matching "<%= term %>".</p>
        <% } %>
    </main>
</body>
</html>